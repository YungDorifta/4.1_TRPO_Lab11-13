<body class="homebody">
    <div class="PageInfoPlace">
        <div class="Greeting">
            @if (@User.Identity.IsAuthenticated)
            {
                <h1>Приветствуем на сайте проката автомобилей!</h1>
                <p class="lead">Выполнен вход с аккаунта: @User.Identity.Name</p>
            }
            else
            {
                <h1>Приветствуем!</h1>
                <p>Войдите в аккаунт или зарегестрируйтесь</p>
            }
        </div>
    </div>

    <!-- Функционал для авторизованного клиента -->
    @if (@User.Identity.IsAuthenticated)
    {
        <div class="MainPageActionSpace">
            <a class="ssylkabutton" href="../ClientPages/FormirovanieZakaza">Арендовать автомобиль</a>
        </div>
        <br><br>
        <div class="MainPageActionSpace">
            <a class="ssylkabutton" href="../ClientPages/ProsmotrAvto">Просмотреть доступные автомобили</a>
        </div>
        <br><br>
        <div class="MainPageActionSpace">
            <a class="ssylkabutton" href="../ClientPages/ProsmotrZakazov">Перейти к моим заказам</a>
        </div>
        <br><br>
    }

    <!-- Функционал для авторизованного админа -->
    @if (@User.Identity.IsAuthenticated)
    {
        <div style="display: flex; align-items: center">
            <a href="../Home/AllTables" style="display: block; margin: auto;">Все таблицы</a>
        </div>
        <br>
    }

    <!-- Функционал для авторизованного сотрудника техподдержки -->
    <div>

    </div>

    <!-- Функционал для авторизованного механика -->
    <div>

    </div>

    <div class="MainPageBottom">
        @if (@User.Identity.IsAuthenticated)
        {
            <a href="../Home/LogOff" style="margin: auto;">Выйти из аккаунта</a>
        }
        else
        {
            <a href="../Home/Registration" style="display: block;">Заргестрироваться</a>
            <div style="width: 10px;"></div>
            <a href="../Home/Authorization">Войти в аккаунт</a>
        }
