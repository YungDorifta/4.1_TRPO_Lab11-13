@model ContosoSite.Models.Users

@{
    ViewBag.Title = "Страница авторизации";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <div class="insidebody">
        <div class="AuthoContent">
            <div class="AuthoGreeting">
                <div class="PageInfo">
                    <h1 class="Text">Добро пожаловать на сайт проката автомобилей!</h1>
                    <h3 class="Text">Войдите в свой аккаунт:</h3>
                </div>
            </div>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <hr />

                <div class="AuthoSpace">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                    <div class="AuthoEditor">
                        <p class="Text">E-mail: </p>
                        @Html.EditorFor(model => model.email, "Эл. почта: ", new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                    </div>

                    <div class="AuthoEditor">
                        <p class="Text">Пароль: <input type="checkbox" id="CBid" class="password-checkbox"><label style="margin-bottom: 0px;">👀</label></p>
                        @Html.EditorFor(model => model.password, "Пароль: ", new { htmlAttributes = new { @class = "form-control", type = "password", id = "password-input" } })
                        @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                    </div>

                    <script>
                        const CB = document.getElementById('CBid');
                        function CBfunc() {
                            if ($(this).is(':checked')) {
                                $('#password-input').attr('type', 'text');
                            } else {
                                $('#password-input').attr('type', 'password');
                            }
                        }
                        CB.addEventListener('click', CBfunc);

                    </script>
                </div>

                <br>

                <div class="AuthoSpace">
                    <input type="submit" style="margin-top: 10px; width: 20%;" value="Войти" />
                </div>

                <br>

                <div class="AuthoSpace">
                    @Html.ActionLink(">На главную<", "Index")
                </div>

            }
        </div>
        <img class="AuthorizationCar" src="../Images/car1.png" />
    </div>
</body>
</html>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

